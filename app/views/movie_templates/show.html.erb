<h1>
  Movie #<%= @the_movie.id %> details
</h1>

<div>
  <a href="/movies">
    Go back
  </a>
</div>

<div>
  <a href="/delete_movie/<%= @the_movie.id %>">
    Delete Movie
  </a>
</div>

<hr>
<form action="/modify_movie/<%= @the_movie.id %>" method="post">
  <div>
    <label for="movie_title_box">
      Title
    </label>
    <input type="text" id="movie_title_box" name="movie_title" value="<%= @the_movie.title %>">
  </div>

  <div>
    <label for="movie_year">
      Year
    </label>
    <input type="text" id="movie_year_box" name="movie_year" value="<%= @the_movie.year %>">
  </div>

  <div>
    <label for="movie_duration_box">
      Duration
    </label>
    <input type="text" id="movie_duration_box" name="movie_duration" value="<%= @the_movie.duration %>">
  </div>

  <div>
    <label for="movie_description_box">
      Description
    </label>
    <input type="text" id="movie_description_box" name="movie_description" value="<%= @the_movie.description %>">
  </div>

  <div>
    <label for="movie_image_box">
      Image
    </label>
    <input type="text" id="movie_image_box" name="movie_image" value="<%= @the_movie.image %>">
  </div>

  <div>
    <label for="director_id_box">
      Director ID
    </label>
    <% if @the_movie.director_id == nil %>
      <%= @the_movie.director_id = nil.to_s %>
    <% else %>
    <% end %>

    <input type="text" id="director_id_box" name="director_id" value="<%= @the_movie.director_id %>">

  </div>
  
  <button>
    Update movie
  </button>
</form>
<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @the_movie.title %>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= @the_movie.year %>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= @the_movie.duration %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @the_movie.description %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_movie.image %>">
  </dd>

  <dt>
    Director
  </dt>
  <dd>
    <% dir_id = @the_movie.director_id %>
    
    <% matching_directors = Director.where({ :id => dir_id }) %>
    
    <% the_director = matching_directors.at(0) %>

    <% if the_director == nil %>
      Uh oh! We weren't able to find a director for this movie.
    <% else %>
      <%= the_director.name %>
    <% end %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_movie.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_movie.updated_at %>
  </dd>
</dl>

<hr>
