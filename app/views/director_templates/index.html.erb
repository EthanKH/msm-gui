<h1>
  List of all directors
</h1>

<hr>
<form action="/add_director" method="post">
  <div>
    <label for="director_name_box">
      Name
    </label>
    <input type="text" id="director_name_box" name="director_name">
  </div>

  <div>
    <label for="director_dob">
      Dob
    </label>
    <input type="text" id="director_dob_box" name="director_dob">
  </div>

  <div>
    <label for="director_bio_box">
      Bio
    </label>
    <input type="text" id="director_bio_box" name="director_bio">
  </div>

  <div>
    <label for="director_image_box">
      Image
    </label>
    <input type="text" id="director_image_box" name="director_image">
  </div>
  
  <button>
    Create director
  </button>
</form>
<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
