<h1>
  List of all actors
</h1>

<hr>
<form action="/add_actor" method="post">
  <div>
    <label for="actor_name_box">
      Name
    </label>
    <input type="text" id="actor_name_box" name="actor_name">
  </div>

  <div>
    <label for="actor_dob">
      Dob
    </label>
    <input type="text" id="actor_dob_box" name="actor_dob">
  </div>

  <div>
    <label for="actor_bio_box">
      Bio
    </label>
    <input type="text" id="actor_bio_box" name="actor_bio">
  </div>

  <div>
    <label for="actor_image_box">
      Image
    </label>
    <input type="text" id="actor_image_box" name="actor_image">
  </div>
  
  <button>
    Create actor
  </button>
</form>
<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_actors.each do |an_actor| %>
  <tr>
    <td>
      <%= an_actor.id %>
    </td>

    <td>
      <img src="<%= an_actor.image %>">
    </td>

    <td>
      <%= an_actor.name %>
    </td>

    <td>
      <%= an_actor.dob %>
    </td>

    <td>
      <a href="/actors/<%= an_actor.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
